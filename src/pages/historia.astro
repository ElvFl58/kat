        class="relative timeline w-full max-w-6xl mx-auto flex-1 flex items-center justify-center overflow-visible"
      >
        <div
          class="space-y-16 sm:space-y-20 lg:space-y-24 relative z-10 w-full px-4 sm:px-6 lg:px-8"
        >
          {
            logros.map((item, i) => {
              const position =
                i % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse";
