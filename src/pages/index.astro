  <style>
    #content {
      padding: 40px;
      filter: blur(8px);
      transition: filter 1.5s ease;
    }

    /* ====== OVERLAY NAVIDAD ====== */
    #christmasIntro {
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at top, #1a2a3a, #050b12);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      overflow: hidden;
    }

    /* TEXTO */
    .intro-text {
      color: white;
      text-align: center;
      animation: fadeIn 2s ease forwards;
    }

    .intro-text h1 {
      font-size: 4rem;
      margin: 0;
      text-shadow: 0 0 20px gold;
    }

    .intro-text p {
      font-size: 1.5rem;
      opacity: 0.8;
    }

    /* ARBOL */
    .tree {
      font-size: 100px;
      margin-bottom: 20px;
      animation: glow 1.5s infinite alternate;
    }

    /* NIEVE */
    .snow {
      position: absolute;
      top: -10px;
      color: white;
      font-size: 14px;
      animation: fall linear infinite;
    }

    /* ANIMACIONES */
    @keyframes glow {
      from {
        text-shadow: 0 0 10px #0f0;
      }

      to {
        text-shadow: 0 0 35px #6f6;
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.7);
      }

      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes fall {
      to {
        transform: translateY(110vh);
      }
    }

    /* SALIDA */
    .hide {
      animation: exit 2s forwards;
    }

    @keyframes exit {
      to {
        opacity: 0;
        transform: scale(1.3);
      }
    }
  </style>
