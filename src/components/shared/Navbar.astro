---
const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "", href: "/cumple" },
  { name: "Historia", href: "/historia" },
  { name: "Galer铆a", href: "/galeria" },
  { name: "Logan", href: "/logan" },
  // { name: "Sorpresa", href: "/sorpresa" },
];
---

<nav
  class="navbar-romantica bg-gradient-to-r from-purple-600 via-pink-600 to-fuchsia-500 sticky top-0"
>
  <div class="navbar-inner">
    <span class="navbar-heart">わ</span>

    <!-- Bot贸n coraz贸n para m贸vil -->
    <button class="menu-btn" id="menuBtn">わ</button>

    <!-- Men煤 principal -->
    <ul id="menuList">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href}>
              <span class="name">{link.name}</span>
            </a>
          </li>
        ))
      }
    </ul>

    <span class="navbar-heart">わ</span>
  </div>
</nav>

<style>
  /* ===== Estilos generales ===== */
  .navbar-romantica {
    padding: 1.2rem 0.5rem;
    z-index: 50;
    box-shadow: 0 4px 16px rgba(147, 51, 234, 0.3);
    backdrop-filter: blur(6px);
  }

  .navbar-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .navbar-heart {
    font-size: 2rem;
    color: #e75480;
    animation: heartbeat 1.8s infinite;
    filter: drop-shadow(0 0 5px #ffd6e0);
  }

  @keyframes heartbeat {
    0%,
    100% {
      transform: scale(1);
    }
    25% {
      transform: scale(1.25);
    }
    50% {
      transform: scale(0.95);
    }
    75% {
      transform: scale(1.15);
    }
  }

  #menuList {
    display: flex;
    gap: 2.2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
    justify-content: center;
  }

  .navbar-romantica li {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .navbar-romantica a {
    text-decoration: none;
    color: #e75480;
    font-weight: 600;
    font-size: 1.15rem;
    padding: 0.5rem 1.4rem;
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 4px 12px rgba(231, 84, 128, 0.1);
    transition: all 0.3s ease-in-out;
    position: relative;
    overflow: hidden;
  }

  .navbar-romantica a::before {
    content: "";
    position: absolute;
    inset: 0;
    background: #e75480;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
    z-index: 0;
    border-radius: 9999px;
  }

  .navbar-romantica a:hover::before {
    transform: scaleX(1);
  }

  .navbar-romantica a:hover {
    color: white;
    transform: scale(1.07) rotate(-1deg);
    box-shadow: 0 6px 20px rgba(231, 84, 128, 0.3);
  }

  .navbar-romantica a > span {
    position: relative;
    z-index: 1;
  }

  /* ===== Bot贸n coraz贸n m贸vil ===== */
  .menu-btn {
    display: none;
    background: linear-gradient(135deg, #ff4f81, #ff7eb9);
    border: none;
    font-size: 1.6rem;
    cursor: pointer;
    color: white;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    box-shadow: 0 4px 12px rgba(231, 84, 128, 0.4);
    animation: heartbeat 1.3s infinite ease-in-out;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .menu-btn:hover {
    transform: scale(1.15);
    box-shadow: 0 6px 20px rgba(231, 84, 128, 0.6);
  }

  .menu-btn:active {
    transform: scale(0.95);
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    #menuList {
      display: none;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      position: absolute;
      top: 70px;
      right: 10px;
      padding: 1rem;
      border-radius: 1rem;
      box-shadow: 0 8px 24px rgba(231, 84, 128, 0.3);
      animation: fadeInMenu 0.3s ease;
    }

    #menuList li {
      margin: 0.4rem 0;
    }

    #menuList a {
      display: block;
      width: 100%;
      padding: 0.8rem 1rem;
      text-align: center;
      font-size: 1.2rem;
      background: rgba(255, 255, 255, 0.85);
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(231, 84, 128, 0.15);
      transition: all 0.25s ease-in-out;
    }

    #menuList a:hover {
      background: #e75480;
      color: white;
      transform: scale(1.03);
    }

    .menu-btn {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #menuList.show {
      display: flex;
    }
  }

  /* Animaci贸n men煤 */
  @keyframes fadeInMenu {
    from {
      opacity: 0;
      transform: translateY(-5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script type="text/javascript">
  document.getElementById("menuBtn").addEventListener("click", function () {
    document.getElementById("menuList").classList.toggle("show");
  });
</script>
