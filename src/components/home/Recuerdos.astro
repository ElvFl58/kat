      background-position: 0% 50%;
    }
  }

  /* Destellos rom√°nticos */
  .section-amor::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.2) 1px,
