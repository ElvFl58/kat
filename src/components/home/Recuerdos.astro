  }

  /* Mensaje */
  .mensaje {
    font-size: 1.2em;
    max-width: 700px;
    margin: 0 auto 30px;
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.6);
    position: relative;
    z-index: 2;
  }

  /* Slider */
  .slider-romantico {
    position: relative;
    max-width: 900px;
    margin: auto;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 0 40px rgba(255, 105, 180, 0.4);
  }

  .slides {
    position: relative;
    width: 100%;
    height: 70vh;
  }

  .slide {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg) center/cover no-repeat;
    opacity: 0;
    transform: scale(1.1);
    transition:
      opacity 1s ease,
      transform 1.2s ease;
  }

  .slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: 15px;
    box-shadow: 0 0 30px rgba(255, 105, 180, 0.6);
    position: relative;
    z-index: 1;
  }

  .slide.active {
    opacity: 1;
    transform: scale(1);
    z-index: 2;
  }

  /* Controles */
  .control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
