---
const { img, title, description,link } = Astro.props;
---

<article>
  <img
    class="rounded-full right-0 m-auto p-4"
    height="130"
    width="130"
    src={img}
    alt=""
  />
  <header>{title}</header>
  <div>
    <p class="text-shadow-2xs text-xs">
      {description}
    </p>
  </div>
  <a href={link} target="_blank" >Descubre mi mundo</a>
</article>

<style>
  article {
    text-shadow: 0 0 40px rgb(177, 11, 11);

    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #e6e6e6;
    margin-top: 20px;
    margin-bottom: 20px;
    background: #ee68e3;
    padding: 10px 15px;
    border-radius: 15px;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 0 35px rgba(255, 75, 92, 0.5);
    user-select: none;
  }
  article:hover {
    background-color: #ce6ae2;
    background-size: cover;
  }
  header {
    margin-bottom: 8px;
    font-weight: 600;
    font-size: 1.1rem;
  }

  div {
    width: 100%;
    resize: vertical;
    min-height: 80px;
    border-radius: 10px;
    border: none;
    padding: 10px;
    font-size: 1rem;
    font-family: inherit;
  }

  article a {
    margin-top: 12px;
    background: #ff4b5c;
    border: none;
    color: white;
    padding: 10px 18px;
    font-size: 1rem;
    border-radius: 25px;
    cursor: pointer;
    box-shadow: 0 0 10px rgba(255, 75, 92, 0.7);
    transition: background-color 0.3s ease;
  }

  article a:hover {
    background-color: #ff758f;
  }
</style>
